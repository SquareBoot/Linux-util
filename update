#!/bin/bash
sudo apt-get update
sudo apt-get dist-upgrade
read -p "Update Python PIP packages (y/n)?" CONT
if [ "$CONT" = "y" ]; then
    echo "Updating pip packages..."
    pip freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip install -U --user
fi
echo "Cleaning..."
sh $(dirname "$0")/clear
